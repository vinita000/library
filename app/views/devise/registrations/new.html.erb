<%= stylesheet_link_tag 'user_reg', media: 'print, screen' %>
<div class="cover">
<div class="logincover">

<h4>Sign Up</h4>

  <hr class="line1">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {style: "width: 100%;max-width: 330px;padding: 15px;"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
     <%= f.input :name,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "name", class: "form-control", placeholder: "Name" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" }%>

       
      <%= f.select :designation, options_for_select([[ "Developer", "developer" ], [ "Associate", "associate" ]]), 
      prompt: "Select Designation" %>
      
      <%= f.input :password,
                  required: true,
                  label: false,
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: false,
                  input_html: { autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" } %>
    </div>

    

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>

  <% end %>

  <h7>Already have an account?</h7>

  <%= render "devise/shared/links" %>
</div>
</div>
