<%= stylesheet_link_tag 'user_login', media: 'print, screen' %>
<div class="cover">
<div class="logincover">

  <h5>Sign In to access Your account</h5>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),html: {style: "width: 100%;max-width: 330px;padding: 15px;"}) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: false,
                  input_html: { autocomplete: "email", class: "form-control", placeholder: "Email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password", class: "form-control log_passwrd", placeholder: "Password" } %>
      <div class="section1">            
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "fog" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> 
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-md btn-primary btn-block" %>
    </div>
  <% end %>

  
  <%= link_to "SignUp Now", new_registration_path(resource_name) %>
</div>
</div>
